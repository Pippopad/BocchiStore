@page "/books"
@model BocchiStore.Pages.BooksModel
@{
    ViewData["Title"] = "Libri";
}


<h1>Libri</h1>
<div class="container row gap-2 w-100 h-100">
    @foreach (var book in Model.Books)
    {
        <div class="card col-4">
            <div class="row g-0">
                <div class="col-xl-5">
                    <img src="@(book.CoverImage == null ? "/img/no_book_cover.png" : book.CoverImage)" class="img-fluid rounded-start border-end" alt="...">
                </div>
                <div class="col-md-7" style="min-height: 200px">
                    <div class="card-body">
                        <h5 class="card-title">@(book.Title.Length > 40 ? book.Title.Substring(0, 40 - 3) + "..." : book.Title)</h5>
                        <p class="card-text">@book.Description</p>
                        <p class="card-text" style="bottom: 5px; position: absolute; right: 5px"><small class="text-success fw-bold">Available</small></p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
